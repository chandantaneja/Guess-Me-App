<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2e3131"
    android:alpha="0.8">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:text="@string/str_guessing"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="#efefef"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/str_can_you"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="#efefef"/>

    <EditText
        android:id="@+id/editNum"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="200dp"
        android:hint="@string/str_give_it_a_try"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:inputType="number"
        android:textColor="#efefef"
        android:textColorHint="#bdc3c7"/>

    <Button
        android:id="@+id/btn_guess"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:text="@string/str_guess"
        app:layout_constraintEnd_toEndOf="@+id/editNum"
        app:layout_constraintStart_toStartOf="@+id/editNum"
        app:layout_constraintTop_toBottomOf="@+id/editNum"
        android:padding="15dp"
        android:textSize="23sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:background="#6c7a89"
        android:textColor="#efefef"/>

</androidx.constraintlayout.widget.ConstraintLayout>